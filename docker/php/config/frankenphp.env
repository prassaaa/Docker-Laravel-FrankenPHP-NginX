# FrankenPHP Worker Configuration

# Number of worker threads (auto = 2 * CPU cores)
FRANKENPHP_WORKERS=auto

# Max requests per worker before restart (0 = unlimited)
FRANKENPHP_MAX_REQUESTS=1000

# Request timeout in seconds
FRANKENPHP_REQUEST_TIMEOUT=30

# Max request body size
FRANKENPHP_MAX_REQUEST_BODY_SIZE=100M

# Enable HTTP/3 support
FRANKENPHP_EXPERIMENTAL_HTTP3=1

# Worker memory limit
FRANKENPHP_WORKER_MEMORY_LIMIT=512M

# Enable worker mode
FRANKENPHP_WORKER=1

# Graceful shutdown timeout
FRANKENPHP_GRACEFUL_TIMEOUT=30s

# Enable metrics
FRANKENPHP_METRICS=1

# Debug mode (disable in production)
FRANKENPHP_DEBUG=0